@using la_mia_pizzeria_static.Models.Form

@model PizzaForm

<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="d-flex align-items-center">
                <h1 class="mt-3 mb-3">Nuovo post</h1>
            </div>
            <form asp-controller="Pizza" asp-action="Create" method="post">
                <div class="mb-3">
                    <strong class="mb-2">Immagine:</strong>
                    <input asp-for="Pizza.Image" class="d-block form-control w-100" />
                    <span asp-validation-for="Pizza.Image" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <strong class="mb-2">Titolo:</strong>
                    <input asp-for="Pizza.Name" class="d-block form-control w-100" />
                    <span asp-validation-for="Pizza.Name" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <strong class="mb-2">Prezzo:</strong>
                    <input asp-for="Pizza.Price" asp class="d-block form-control w-100" />
                    <span asp-validation-for="Pizza.Price" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <strong class="mb-2">Contenuto:</strong>
                    <textarea asp-for="Pizza.Description" rows="10" class="d-block form-control w-100"></textarea>
                    <span asp-validation-for="Pizza.Description" class="text-danger"></span>
                </div>
                <div class="text-end">
                    <input type="submit" class="btn btn-small btn-success" value="Salva">
                </div>
                <div class="mb-3">
                    <strong>Categoria:</strong>
                    <select asp-for="Pizza.CategoryId" rows="10" class="d-block w-100">                  
                        @foreach (Category category in Model.Categories)
                        {
                            @if (Model.Pizza.CategoryId == category.Id)
                            {
                                <option value="@category.Id" selected>@category.Title</option>
                            }
                            else
                            {
                                <option value="@category.Id">@category.Title</option>
                            }
                        }
                    </select>
                </div>
            </form>
        </div>
    </div>
</div>
